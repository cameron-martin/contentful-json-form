{
   "definitions": {},
   "$schema": "http://json-schema.org/draft-07/schema#",
   "$id": "http://example.com/root.json",
   "type": "object",
   "title": "The Root Schema",
   "required": [
     "name",
     "tags"
   ],
   "properties": {
     "name": {
       "$id": "#/properties/name",
       "type": "string",
       "title": "Name",
       "default": "",
       "pattern": "^[0-9]+$",
       "minLength": 3
     },
     "tags": {
       "$id": "#/properties/tags",
       "type": "array",
       "title": "The Tags Schema",
       "items": {
         "$id": "#/properties/tags/items",
         "type": "string",
         "title": "The Items Schema",
         "default": "",
         "examples": [
           "foo",
           "bar"
         ],
         "pattern": "^(.*)$"
       }
     }
   }
 }